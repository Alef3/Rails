<h1> Lista de Alunos </h1>
<%= link_to 'Novo Aluno', new_aluno_path %>
<table>
  <tr>
    <th> Número </th>
    <th> Nome </th>
    <th> Nota </th>
    <th> Opções </th>
  </tr>
  <% @alunos.each do |aluno| %>
    <tr>
      <td> <%= aluno.id %> </td>
      <td> <%= aluno.nome %> </td>
      <td> <%= aluno.nota %> </td>
      <td>
        <%= link_to 'Editar', edit_aluno_path(aluno) %>
        <%= link_to 'Apagar', aluno, method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
