<h3> New Track </h3>
<%= @track.errors.first %>
<%= form_for @track do |f| %>
  <b> Name:        </b>  <%= f.text_field :name %> <br>
  <b> Album:       </b>  <%= f.text_field :album_id %> <br>
  <b> Media Type:  </b>  <%= f.text_field :media_type_id %> <br>
  <b> Genre:       </b>  <%= f.text_field :genre_id %> <br>
  <b> Composer:    </b>  <%= f.text_field :composer %> <br>
  <b> Milliseconds:</b>  <%= f.text_field :milliseconds %> <br>
  <b> Size (bytes):</b>  <%= f.text_field :bytes %> <br>
  <b> Unit Price:  </b>  <%= f.text_field :unit_price %> <br>
  <%= f.submit 'Save' %>
  <button type="button" class="btn btn-secondary"><%= link_to "Cancel", "/tracks", class: "link" %></button> 

<% end %>
