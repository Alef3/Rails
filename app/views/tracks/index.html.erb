<h3> All Tracks </h3>

<button type="button" class="btn btn-primary btn-sm"><%=link_to "Create Track", new_track_path, class: "link" %></button>

<%= form_tag("/tracks", method: "get") do %>
  <%= label_tag(:name, "Filter:") %>
  <%= text_field_tag(:name, params['name']) %>
  <%= submit_tag("Submit") %>
<% end %>

<ol>
  <% @tracks.each do |track| %>
    <li> <%= link_to track.name, track  %> </li>
  <% end %>
</ol>
