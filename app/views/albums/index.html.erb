<h3>All Albums</h3>

<button type="button" class="btn btn-primary btn-sm"><%=link_to "Create Album", new_album_path, class: "link" %></button>

<%= form_tag("/albums", method: "get") do %>
  <%= label_tag(:title, "Filter:") %>
  <%= text_field_tag(:title, params['title']) %>
  <%= submit_tag("Submit") %>
<% end %>

<ol>
  <% @albums.each do |album| %>
      <li> <%= link_to album.title, album %> </li>
  <% end %>
</ol>
