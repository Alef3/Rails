<h3> New Album </h3>

<%= @album.errors.first %>

<%= form_for @album do |i| %>
<div class="form-row align-items-center">
  <div class="col-auto">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Title</span>
        </div>
        <%= i.text_field :title %>
      </div>
  </div>
  <div class="col-auto">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Artist</span>
        </div>
        <%= i.select :artist_id, options_for_select(@artists.collect{ |artist| [artist.name, artist.id] },params[:artist_id]),{} %>
      </div>
    </div>
  </div>
    <%= i.submit 'Save', class: "btn btn-primary" %>

<%= link_to "Cancel", "/albums", class: "btn btn-secondary" %>

<% end %>
