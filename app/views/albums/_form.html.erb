<% @album.errors.full_messages.each do |error| %>
  <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
<% end %>

<%= form_for @album do |i| %>

<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Title:</label>
    <div class="col-sm-10">
      <%= i.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Artist:</label>
    <div class="col-sm-10">
      <%= i.select :artist_id, options_for_select(@artists.collect{ |artist| [artist.name, artist.id] },params[:artist_id]),{}, class: "form-control" %>
    </div>
  </div>
  <%= i.submit "Save changes", class: "btn btn-primary" %>
  <%= link_to "Back", "/albums", class: "btn btn-secondary"%>
</form>

<% end %>
