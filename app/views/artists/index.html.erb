<div class="vertical-center">
    <div class="container">
            <div class="row d-flex justify-content-center" id="showingArtistAlbums">
             <form class="form-inline">
                 <div class="form-group mb-1">
                    <h2 class="mr-5"> Artists List</h2>
                  </div>
              </form>
            </div>
      </div>
  </div>

  <%= form_tag("/artists", method: "get") do %>
      <form>
      <div class="col-7">
        <div class="form-row align-items-center">
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <%= label_tag(:name, "Filter:", class: "input-group-text") %>
              </div>
              <%= text_field_tag(:name, params['name'], placeholder:"Artist Name", class: "mr-3") %>
              <%= submit_tag("Search", class: "btn btn-outline-success mr-2") %>
              <%=link_to "Create Artist", new_artist_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </form>

  <% end %>

    <ul class="list-group">
      <% @artists.each do |artist| %>
      <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= link_to artist.name, artist %>
        <span class="badge badge-primary badge-pill" data-toggle="tooltip" data-html="true" data-placement="left" title="Number of Album(s)"><%=artist.albums.count%></span>
      </li>
      <% end %>
    </ul>
