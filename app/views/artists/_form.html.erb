<% @artist.errors.full_messages.each do |error| %>
  <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
<% end %>

<%= form_for @artist do |i| %>
<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Name:</label>
    <div class="col-sm-10">
      <%= i.text_field :name, class: "form-control", placeholder: "Type Here" %>
    </div>
  </div>
  <%= i.submit 'Save', class: "btn btn-primary" %>

  <%= link_to "Cancel", "/artists", class: "btn btn-secondary" %>
</form>

<% end %>
